@model IEnumerable<GearShop.Models.Category_Models.CategoryListItem>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <div class="card mb-5 category_list_cards" style="width: 25rem;">
                    <div class="card-body">
                        <h5 class="card-title">@item.CategoryName</h5>
                        <a href="@Url.Action("Details", new { id = item.CategoryId })" class="card-link">View Gear in this Category</a>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a href="@Url.Action("Edit", new { id = item.CategoryId })" class="card-link">Edit</a>
                            <a href="@Url.Action("Delete", new { id = item.CategoryId })" class="card-link">Delete</a>
                        }
                    </div>
                </div>
            </td>
        </tr>
    }

</table>
