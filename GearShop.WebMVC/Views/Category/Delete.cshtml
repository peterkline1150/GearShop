@model GearShop.Models.Category_Models.CategoryDetail

@{
    ViewBag.Title = "Delete";
}
<div class="card bg-danger">
    <div class="card-header">
        <h5>Are you sure you want to delete this category?</h5>
    </div>
    <div class="card-body">
        <p class="card-text">Category ID: @Html.DisplayFor(model => model.CategoryId)</p>
        <p class="card-text">Category: @Html.DisplayFor(model => model.CategoryName)</p>
    </div>
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-primary mr-3" />
                <a href="@Url.Action("Index")" class="btn btn-success">Return to Categories</a>
            </div>
        }
    </div>
</div>
