    <div class="container body-content">
        <br />
        @RenderBody()
        <hr />
        <footer>
            <p style="color: white;">&copy; @DateTime.Now.Year - Peter's Outdoor Gear Emporium Inc.</p>
            @if (User.Identity.IsAuthenticated)
            {
                <ul>
                    <li class="nav-item list-unstyled">
                        @Html.ActionLink("View your Comments", "Index", "Comment", null, new { @style = "color: white; text-decoration: underline;" })
                    </li>
                    <li class="nav-item list-unstyled">
                        @Html.ActionLink("View your Replies", "Index", "Reply", null, new { @style = "color: white; text-decoration: underline;" })
