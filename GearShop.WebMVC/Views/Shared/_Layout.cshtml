<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <title>@ViewBag.Title - Peter's Outdoor Gear Emporium</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body class="bg-secondary pt-5">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <img src="~/Assets/ice_axes.jpg" width="40" height="40" class="d-inline-block align-top mx-1" />
        <a class="navbar-brand" href="@Url.Action("Index", "Home")">Peter's Outdoor Gear Emporium</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="@Url.Action("Index", "Home")">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("About", "Home")">About Us</a>
                </li>
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Cart")">View Your Cart</a>
                    </li>
                }
            </ul>
            <div class="btn-group btn-group-sm mr-auto" role="group" aria-label="...">
                <a href="@Url.Action("IndexByCategoryType", "Category", new { categoryType = GearShop.Data.CategoryType.Climbing })" class="btn btn-sm btn-outline-light">Climbing</a>
                <a href="@Url.Action("IndexByCategoryType", "Category", new { categoryType = GearShop.Data.CategoryType.Hiking })" class="btn btn-sm btn-outline-light">Hiking</a>
                <a href="@Url.Action("IndexByCategoryType", "Category", new { categoryType = GearShop.Data.CategoryType.Camping })" class="btn btn-sm btn-outline-light">Camping</a>
                <a href="@Url.Action("IndexByCategoryType", "Category", new { categoryType = GearShop.Data.CategoryType.Cycling })" class="btn btn-sm btn-outline-light">Cycling</a>
                <a href="@Url.Action("IndexByCategoryType", "Category", new { categoryType = GearShop.Data.CategoryType.Running })" class="btn btn-sm btn-outline-light">Running</a>
            </div>
            @using (Html.BeginForm("Index", "Home"))
            {
                <form class="form-inline my-2 my-lg-0">
                    @Html.TextBox("name")
                    <button class="btn btn-outline-success my-2 my-sm-0 mr-5" type="submit" value="Index">Search</button>
                </form>
            }
            <form class="form-inline my-2 my-lg-0">
                @Html.Partial("_LoginPartial")
            </form>
        </div>
    </nav>
