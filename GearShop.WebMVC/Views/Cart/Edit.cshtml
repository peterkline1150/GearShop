@model GearShop.Models.Cart_Models.CartEdit

@{
    ViewBag.Title = "Edit your Cart";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="card">
    <div class="card-header">
        <h5>Edit your Cart</h5>
    </div>
    <div class="card-body">
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.CartId)
            @Html.HiddenFor(model => model.UserId)

            <div class="form-group">
                @{
                    for (int i = 0; i < Model.GearInCart.Count; i++)
                    {
                        <div class="col-md-10">
                            @Html.DisplayFor(modelItem => Model.GearInCart[i].NameOfGear)
                            @Html.EditorFor(modelItem => Model.GearInCart[i].AmountOfGearInCart, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(modelItem => Model.GearInCart[i].AmountOfGearInCart, "", new { @class = "text-danger" })
                            @Html.HiddenFor(modelItem => Model.GearInCart[i].CartId)
                            @Html.HiddenFor(modelItem => Model.GearInCart[i].GearId)
                            @Html.HiddenFor(modelItem => Model.GearInCart[i].Id)
                            @Html.HiddenFor(modelItem => Model.GearInCart[i].NameOfGear)
                            @Html.HiddenFor(modelItem => Model.GearInCart[i].Price)
                            @Html.HiddenFor(modelItem => Model.GearInCart[i].UserId)
                        </div>
                    }
                }
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @if (Model.GearInCart.Count > 0)
                    {
                        <input type="submit" value="Update Cart" class="btn btn-outline-primary mr-3" />
                    }
                    <a href="@Url.Action("Index")" class="btn btn-outline-success">Return to your Cart</a>
                </div>
            </div>
        </div>
    </div>
</div>
}
